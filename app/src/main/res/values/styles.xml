<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarBase">
        <item name="android:elevation">4dp</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">#222222</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2px</item>
        <item name="android:background">#2d2d2d</item>
    </style>

    <style name="HomeTabButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">center</item>
        <item name="android:clickable">true</item>
        <item name="android:button">@null</item>
    </style>

    <style name="SettingFragmentItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#909090</item>
        <item name="android:paddingLeft">31dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">32dp</item>
        <item name="android:background">@drawable/selector_setting_itme_background</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TermOfUse_ContentText">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">#2c2c2c</item>
        <item name="android:layout_marginTop">14dp</item>
    </style>

    <style name="TermOfUse_Button">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">86dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
